	<h1>CREAR CUENTA</h1>	
	<form action="/usuarios/register" method="POST">
	<fieldset>
		<% if (locals.error) { %>
			<p><strong><%= locals.error %></strong></p>
		<% } %>
		<legend>Datos del usuario</legend>
		<div><input type="text" name="username" placeholder="nombre"/></div>
		<div><input type="text" name="username" placeholder="apellidos"/></div>
		<div><input type="text" name="email" placeholder="email"/></div>    
		<div><input type="password" name="password" placeholder="contraseña"/></div>
		<button type="submit">Crear Cuenta</button>
		<div class="separator">
			<hr>
			<span>Ya tengo una cuenta</span>
			<hr>
		</div>
		<a href="/usuarios/login">
			<button type="button">Iniciar sesión</button>	<!--si pulsamos el boton,el usuario vuelve a visualizar el formulario de login-->
		</a>		
	</fieldset>
