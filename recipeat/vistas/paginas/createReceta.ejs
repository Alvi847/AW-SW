<h1>CREAR RECETA</h1>
<form action="/receta/createReceta" method="POST" enctype="multipart/form-data">
<fieldset>
	<legend>Añadir receta</legend>
	<% if (locals.error) { %>
		<p><strong><%= locals.error %></strong></p>
	<% } %>
	<div>
		<input type="text" name="nombre" id="nombre" required 
			   placeholder="Nombre de receta" 
			   value="<%= locals.nombre ? locals.nombre : '' %>">
	</div>
	<div>
		<input type="text" name="descripcion" id="descripcion" required 
			   placeholder="Descripción"
			   value="<%= locals.descripcion ? locals.descripcion : '' %>">
	</div>

	<div>
		<input type="text" name="modo_preparacion" id="modo_preparacion" required 
			   placeholder="Modo de preparación"
			   value="<%= locals.modo_preparacion ? locals.modo_preparacion : '' %>">
	</div>

	<div class="foto">
		<input type="file" name="foto" required value="<%= locals.foto ? locals.foto : '' %>">>
	</div>
	<button type="submit">Subir receta</button>
</fieldset>
