
  <div class="perfil-card-container">
    <div class="perfil-card">
  
      
      <div class="menu-lateral">
        <ul>
          <li><a href="/usuarios/<%= session.username %>/favoritos">Mis Recetas Favoritas</a></li>
          <li><a href="/receta/misRecetas">Mis Recetas</a></li>
        </ul>
      </div>
  
      
      <div class="contenido-perfil">
        <h1 class="titulo-perfil">Editar Perfil
        </h1>
  
        <div class="perfil-detalles">
          
  
          <form class="form-editar" action="/usuarios/updatePerfil" method="POST" name="form-actualizar-perfil" enctype="multipart/form-data">
          
            <div class="perfil-foto">
              <label for="imagen">Imagen:</label>
              <input type="file" name="imagen" id="imagen" value="<%= locals.foto ? locals.foto : '' %>">
              <span class="error"></span>
              <span class="feedback"></span>
            </div>
          
            <label>Nombre:
              <input type="text" name="nombre" value="<%= usuario.nombre %>" required>
              <span class="error"></span>
              <span class="feedback"></span>
            </label>
          
            <label>Username:
              <input type="text" name="username" value="<%= usuario.username %>" readonly>
              <span class="error"></span>
              <span class="feedback"></span>
            </label>
          
            <label>Email:
              <input type="email" name="email" value="<%= usuario.email %>" required>
              <span class="error"></span>
              <span class="feedback"></span>
            </label>
          
            <label>Nueva contrase√±a:
              <input type="password" name="password" placeholder="Dejar en blanco si no quieres cambiarla">
              <span class="error"></span>
              <span class="feedback"></span>
            </label>
          
            <div class="botones-perfil">
              <button type="submit" class="guardar">Guardar cambios</button>
              <a href="/usuarios/<%= session.username %>" class="cancelar">Cancelar</a>
            </div>
          </form>

        </div>
      </div>  
    </div>
  </div>

  <script src="/js/updatePerfil.js" defer></script>
  <script src="/js/fetch.js" defer></script>

  
  